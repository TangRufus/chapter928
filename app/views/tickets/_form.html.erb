<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :price, as: :radio_buttons, collection: Ticket.prices %>
    <%= f.input :scene, as: :radio_buttons, collection: Ticket.scenes %>
    <%= f.input :number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
